<Window x:Class="ValleysEdgePokerTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValleysEdgePokerTimer"
        mc:Ignorable="d"
        Title="Valley's Edge Poker Timer" Height="486" Width="586" Background="Black">
    <Grid>
        <Label x:Name="cur_blinks_lb" Content="0/0" HorizontalAlignment="Left" Margin="390,63,0,0" VerticalAlignment="Top" Height="114" Width="143" Foreground="White" FontSize="73.333" FontWeight="Bold"/>
        <Label x:Name="cur_time_lb" Content="00:00:00" HorizontalAlignment="Left" Margin="68,63,0,0" VerticalAlignment="Top" Foreground="White" FontSize="73.333" RenderTransformOrigin="0.5,0.5" Height="114" Width="283"/>
        <Label Content="Current" HorizontalAlignment="Left" Margin="42,24,0,0" VerticalAlignment="Top" Foreground="White" FontSize="32"/>
        <Label Content="Next Blinds" HorizontalAlignment="Left" Margin="173,177,0,0" VerticalAlignment="Top" Foreground="White" FontSize="24" Height="46" Width="147"/>
        <Label x:Name="next_blinds_lb" Content="0/0" HorizontalAlignment="Left" Margin="325,168,0,0" VerticalAlignment="Top" Foreground="White" FontSize="32" FontWeight="Bold"/>
        <Label Content="Next Break" HorizontalAlignment="Left" Margin="42,228,0,0" VerticalAlignment="Top" Height="59" Width="178" Foreground="White" FontSize="32"/>
        <Label Content="00:00:00" HorizontalAlignment="Left" Margin="68,269,0,0" VerticalAlignment="Top" Foreground="White" Height="95" Width="297" FontSize="73.333"/>
        <Button Content="Play" HorizontalAlignment="Left" Margin="250,377,0,0" VerticalAlignment="Top" Width="70" Height="70" Background="#FF83C87E"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="180,377,0,0" VerticalAlignment="Top" Width="70" Background="#FFDA5B5B" Height="70"/>
        <Button Content="Pause" HorizontalAlignment="Left" Margin="320,377,0,0" VerticalAlignment="Top" Width="70" Height="70" Background="#FF6960E9"/>
    </Grid>
</Window>
